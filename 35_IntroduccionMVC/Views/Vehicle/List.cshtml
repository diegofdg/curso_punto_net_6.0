@model VehicleListViewModel

@{
    ViewData["Title"] = ViewData["MiTitulo"];
}

@*
    Documentación de Bootstrap sobre Grid System para divs
    https://getbootstrap.com/docs/5.1/layout/grid/

    Para usar ViewData cambiamos la línea 28 por la siguiente:
    @foreach (var vehiculo in ViewData["Vehicles"] as List<VehicleListModel>)

    Y en VehicleController descomentamos la linea 46 y comentamos la linea 48
*@

<div class="row">
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Dominio</th>
                    <th>Año de fabricación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                 @foreach (var vehiculo in ViewBag.Vehicles)                
                {
                    <tr>
                        <td>@vehiculo.Id</td>
                        <td>@vehiculo.Dominio</td>
                        <td>@vehiculo.AnioFabricacion</td>
                        <td><a asp-action="Edit" asp-controller="Vehicle">Editar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>